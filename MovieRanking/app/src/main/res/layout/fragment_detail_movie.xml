<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobintum.movieranking.fragments.DetailMovieFragment">

  
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/poster"
            android:scaleType="fitCenter"
            android:id="@+id/imgPoster"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_title"
            android:gravity="center"
            android:padding="@dimen/padding_small"
            android:id="@+id/txtTitle"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_medium"
            android:gravity="fill_horizontal"
            android:padding="@dimen/padding_small"
            android:id="@+id/txtSynopsis"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_title"
            android:gravity="fill_horizontal"
            android:padding="@dimen/padding_small"
            android:text="@string/critic_score"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_title"
            android:gravity="center"
            android:padding="@dimen/padding_small"
            android:textColor="@color/colorAccent"
            android:id="@+id/txtCriticScore"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_title"
            android:gravity="fill_horizontal"
            android:padding="@dimen/padding_small"
            android:text="@string/audience_score"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_title"
            android:gravity="center"
            android:padding="@dimen/padding_small"
            android:textColor="@color/colorAccent"
            android:id="@+id/txtAudienceScore"/>





    </LinearLayout>

</ScrollView>
